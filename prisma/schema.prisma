generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --------------------
// ENUMS
// --------------------

enum Role {
  ADMIN
  Patient
  Doctor
  Nurse
  Receptionist
  Pharmacist
  Lab_Technician
  Billing_Staff
  Cleaning_Staff
}

enum UserRole {
  ADMIN
  DOCTOR
  NURSE
  RECEPTIONIST
  LAB_TECHNICIAN
  PHARMACIST
  PATIENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  ARCHIVED
}
enum BloodGroup {
  A_POS
  A_NEG
  B_POS
  B_NEG
  AB_POS
  AB_NEG
  O_POS
  O_NEG
}
enum Specialization {
  CARDIOLOGY
  DERMATOLOGY
  PEDIATRICS
  ORTHOPEDICS
  NEUROLOGY
  RADIOLOGY
  ONCOLOGY
  PSYCHIATRY
  GENERAL_MEDICINE
  ENT
  GASTROENTEROLOGY
  NEPHROLOGY
  UROLOGY
  OPHTHALMOLOGY
  GYNECOLOGY
  PULMONOLOGY
  RHEUMATOLOGY
  NONE // for non-doctor roles
}

enum DepartmentType {
  CARDIOLOGY
  NEUROLOGY
  PEDIATRICS
  ONCOLOGY
  RADIOLOGY
  EMERGENCY
  GENERAL_MEDICINE
  ORTHOPEDICS
  DERMATOLOGY
  ICU
  OPD
}

enum NurseShift {
  MORNING
  EVENING
  NIGHT
}


model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  phone     String?
  password  String

  gender      Gender?
  dateOfBirth DateTime?
  role        UserRole
  status      UserStatus @default(ACTIVE)

  address              String?
  isVerified           Boolean @default(true)
  isDeleted            Boolean @default(false)

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Department assignment for staff
  departmentId         String?
  department           Department? @relation("UserDepartment", fields: [departmentId], references: [id])

  // Department head
  headedDepartment     Department? @relation("DepartmentHead")

  // Profile relations
  doctorProfile        DoctorProfile?
  patientProfile       PatientProfile?
  nurseProfile         NurseProfile?
  labTechProfile       LabTechnicianProfile?
  pharmacistProfile    PharmacistProfile?
}

model DoctorProfile {
  id            String          @id @default(uuid())
  userId        String          @unique
  user          User            @relation(fields: [userId], references: [id])

  specialization Specialization
  licenseNumber  String?
  experience     Int?
  consultationFee Float?

  departmentId   String?
  department     Department?     @relation(fields: [departmentId], references: [id])
}

model PatientProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  mrn        String   @unique          // Medical Record Number
  bloodGroup BloodGroup?
  height     Float?
  weight     Float?
  allergies  String?
}
model NurseProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  licenseNumber String?
  shift         NurseShift?
  experience    Int?
}


model LabTechnicianProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  qualification String?
  specialty     String?      // e.g. Hematology, Radiology, Microbiology
  experience    Int?
}

model PharmacistProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  licenseNumber String?
  qualification String?
  experience    Int?
}

model Department {
  id          String     @id @default(uuid())
  name        String     @unique
  code        String     @unique
  description String?
  phone       String?
  location    String?

  headId      String?    @unique
  head        User?      @relation("DepartmentHead", fields: [headId], references: [id])

  users       User[]     @relation("UserDepartment")
  doctorProfiles DoctorProfile[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}






