generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --------------------
// ENUMS
// --------------------

enum Role {
  ADMIN
  Patient
  Doctor
  Nurse
  Receptionist
  Pharmacist
  Lab_Technician
  Billing_Staff
  Cleaning_Staff
}

enum UserRole {
  ADMIN
  DOCTOR
  NURSE
  RECEPTIONIST
  LAB_TECHNICIAN
  PHARMACIST
  PATIENT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  ARCHIVED
}
enum BloodGroup {
  A_POS
  A_NEG
  B_POS
  B_NEG
  AB_POS
  AB_NEG
  O_POS
  O_NEG
}
enum Specialization {
  CARDIOLOGY
  DERMATOLOGY
  PEDIATRICS
  ORTHOPEDICS
  NEUROLOGY
  RADIOLOGY
  ONCOLOGY
  PSYCHIATRY
  GENERAL_MEDICINE
  ENT
  GASTROENTEROLOGY
  NEPHROLOGY
  UROLOGY
  OPHTHALMOLOGY
  GYNECOLOGY
  PULMONOLOGY
  RHEUMATOLOGY
  NONE // for non-doctor roles
}

enum DepartmentType {
  CARDIOLOGY
  NEUROLOGY
  PEDIATRICS
  ONCOLOGY
  RADIOLOGY
  EMERGENCY
  GENERAL_MEDICINE
  ORTHOPEDICS
  DERMATOLOGY
  ICU
  OPD
}

enum NurseShift {
  MORNING
  EVENING
  NIGHT
}

enum AppointmentStatus {
  SCHEDULED
  RESCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}
enum LabTestStatus {
  PENDING
  COMPLETED
  CANCELLED
}
enum InvoiceStatus {
  PAID
  UNPAID
  PARTIAL
}

enum PaymentMethod {
  CASH
  CARD
  BANK_TRANSFER
}

enum LabTestType {
  BLOOD_CBC
  LIPID_PROFILE
  URINE_EXAM
  XRAY
  MRI
  CT_SCAN
  COVID_PCR
}


model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  phone     String?
  password  String

  gender      Gender?
  dateOfBirth DateTime?
  role        UserRole
  status      UserStatus @default(ACTIVE)

  address              String?
  isVerified           Boolean @default(true)
  isDeleted            Boolean @default(false)

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Department assignment for staff
  departmentId         String?
  department           Department? @relation("UserDepartment", fields: [departmentId], references: [id])

  // Department head
  headedDepartment     Department? @relation("DepartmentHead")

  // Profile relations
  doctorProfile        DoctorProfile?
  patientProfile       PatientProfile?
  nurseProfile         NurseProfile?
  labTechProfile       LabTechnicianProfile?
  pharmacistProfile    PharmacistProfile?

  doctorAppointments  Appointment[] @relation("DoctorAppointments")
  patientAppointments Appointment[] @relation("PatientAppointments")

  // Medical records created for this user (patient)
  medicalRecords  MedicalRecord[] @relation("PatientMedicalRecords")

  // Prescriptions issued BY this doctor
  doctorPrescriptions   Prescription[]  @relation("DoctorPrescriptions")

  // Prescriptions received BY this patient
  patientPrescriptions  Prescription[]  @relation("PatientPrescriptions")

  doctorLabTest  LabTest[] @relation("DoctorLabTest")
  patientLabTest LabTest[] @relation("PatientLabTest")
}

model DoctorProfile {
  id            String          @id @default(uuid())
  userId        String          @unique
  user          User            @relation(fields: [userId], references: [id])

  specialization Specialization
  licenseNumber  String?
  experience     Float?
  consultationFee Float?

  departmentId   String?
  department     Department?     @relation(fields: [departmentId], references: [id])
}

model PatientProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  mrn        String   @unique          // Medical Record Number
  bloodGroup BloodGroup?
  height     Float?
  weight     Float?
  allergies  String?
  
}
model NurseProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  licenseNumber String?
  shift         NurseShift?
  experience    Float?
}


model LabTechnicianProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  qualification String?
  specialty     String?      // e.g. Hematology, Radiology, Microbiology
  experience    Float?
}

model PharmacistProfile {
  id         String   @id @default(uuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])

  licenseNumber String?
  qualification String?
  experience    Float?
}

model Department {
  id          String     @id @default(uuid())
  name        String     @unique
  code        String     @unique
  description String?
  phone       String?
  location    String?

  headId      String?    @unique
  head        User?      @relation("DepartmentHead", fields: [headId], references: [id])

  users       User[]     @relation("UserDepartment")
  doctorProfiles DoctorProfile[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Appointment {
  id        String   @id @default(uuid())
  doctorId  String
  patientId String
  date      DateTime
  status    AppointmentStatus
  doctor    User     @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patient   User     @relation("PatientAppointments", fields: [patientId], references: [id])

}

model MedicalRecord {
  id        String    @id @default(uuid())
  patientId String
  diagnosis String?
  notes     String?
  createdAt DateTime @default(now())
  patient   User     @relation("PatientMedicalRecords", fields: [patientId], references: [id])
}

model Prescription {
  id         String    @id @default(uuid())
  patientId  String
  doctorId   String
  createdAt  DateTime  @default(now())
  items      PrescriptionItem[]
  doctor     User      @relation("DoctorPrescriptions", fields: [doctorId], references: [id])
  patient    User      @relation("PatientPrescriptions", fields: [patientId], references: [id])

}

model PrescriptionItem {
  id              String        @id @default(uuid())
  prescriptionId  String
  medicationId    String
  dosage          String
  frequency       String
  prescription    Prescription @relation(fields: [prescriptionId], references: [id])
  medication      Medication   @relation(fields: [medicationId], references: [id])
}

model Medication {
  id        String              @id @default(uuid())
  name      String
  stock     Int                 @default(0)
  price     Float
  category  String?
  prescriptionItems PrescriptionItem[]
}
model LabTest {
  id         String         @id @default(uuid())
  patientId  String
  doctorId   String
  testType   LabTestType
  status     LabTestStatus  @default(PENDING)

  // 1-to-1 result
  result     LabResult?
  requestedAt DateTime @default(now())
  completedAt DateTime?
  notes       String?


  // Relations
  doctor     User           @relation("DoctorLabTest", fields: [doctorId], references: [id])
  patient    User           @relation("PatientLabTest", fields: [patientId], references: [id])
}


model LabResult {
  id         String    @id @default(uuid())
  labTestId  String    @unique
  result     String?
  createdAt  DateTime  @default(now())

  labTest    LabTest   @relation(fields: [labTestId], references: [id])
}

